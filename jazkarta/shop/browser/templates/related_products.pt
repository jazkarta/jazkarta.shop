<div class="jaz-shop-related-products">
  <section id="related-products">
    <h1>Related Products</h1>
    <ul>
      <li tal:repeat="product view/products">
        <a href="${product/absolute_url}">
          <article class="product-item" itemscope itemtype="http://schema.org/Product">
            <h4 itemprop="name">${product/title} ($ ${product/price})</h4>
            <p tal:condition="product/description" class="documentDescription description">
              ${product/description}
            </p>
          </article>
        </a>
      </li>
    </ul>

  </section>
</div>